<div class="d-flex justify-content-center align-items-center p-2 bg-light">
    <form>
        <div class="row" style="row-gap:10px">
            <div class="col-6">
                <div class="form-group">
                    <label for="primer-nombre">Primer Nombre: (*)</label>
                    <input type="text" class="form-control" id="primer-nombre" placeholder="Primer nombre">
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    <label for="segundo-nombre">Segundo Nombre:</label>
                    <input type="text" class="form-control" id="segundo-nombre" placeholder="Segundo nombre">
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    <label for="primer-apelliod">Primer Apellido: (*)</label>
                    <input type="text" class="form-control" id="primer-apellido" placeholder="Primer apellido">
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    <label for="segundo-apellido">Segundo Apellido:</label>
                    <input type="text" class="form-control" id="segundo-apellido" placeholder="Segundo apellido">
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    <label for="email">Email: (*)</label>
                    <input type="email" class="form-control" id="email" placeholder="sapp@gmail.com">
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    <label for="celular">celular: (*)</label>
                    <input type="text" class="form-control" id="celular" placeholder="305-1111111">
                </div>
            </div>
            <div class="col-6">
                <label for="país">País (*)</label>
                <select class="custom-select form-control" id="countries" onchange="GetDepStaProsByCountry()"></select>
            </div>
            <div class="col-6">
                <label for="departamento">Departamento (*)</label>
                <select class="custom-select form-control"></select>
            </div>
            <div class="col-6">
                <label for="municipio-ciudad">Municipio/Ciudad (*)</label>
                <select class="custom-select form-control">
                    <option selected>Open this select menu</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                </select>
            </div>
            <div class="col-6">
                <label for="tipo-documento">Tipo de documento (*)</label>
                <select class="custom-select form-control">
                    <option selected>Open this select menu</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                </select>
            </div>
            <div class="col-6">
                <div class="form-group">
                    <label for="numero-documento-id">Número de documento: (*)</label>
                    <input type="text" class="form-control" id="numero-documento" placeholder="1111111111">
                </div>
            </div>
        </div>
        <div class="form-group form-check">
            <input type="checkbox" class="form-check-input" id="terminos-condiciones">
            <label class="form-check-label" for="exampleCheck1">Acepto terminos &Aacute; condiciones</label>
        </div>
        <button type="submit" class="btn btn-primary">Registrar</button>
        <button type="button" class="btn btn-primary">Cancelar</button>
    </form>
</div>

